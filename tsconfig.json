{
	"files": [
		"src/index.ts",
		"src/@types/global.d.ts"
	],
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2015", "dom"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": "src",
		"outDir": "./dist",
		"rootDir": "./src",
		"skipDefaultLibCheck": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"declaration": true,
		"sourceMap": true
	},
	"include": [
		"src",
		"src/@types/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.test.tsx"
	]
}